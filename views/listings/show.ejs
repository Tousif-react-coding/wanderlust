<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-md-8 offset-3">
    <h3>Listing Details :</h3>
  </div>
  <div class="card col-6 offset-3 show-card">
<img src="<%= listing.image %>" alt="listing_image" class="show-img">
<div class="card-body">
  <b><p class="card-text">
    <%= listing.title %>
  </p></b><br>
  <%= listing.description %> <br>
  &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
  <%= listing.location %> <br>
  <%= listing.country %>
</div>
  </div>
   

  <div class="btns">
    
    <a href="/listings/<%= listing._id %>/edit" class=" col-1 offset-3 btn btn-dark edit-btn">Edit</a>
  
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn -btn-dark offset-5">Delete</button>
    </form>
  </div>
  <hr>
   <div class="">
    <h4>Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]">
      </div>
      <div>
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" class="form-control" id="comment" cols="30" rows="10"></textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
   </div>
  
</div>