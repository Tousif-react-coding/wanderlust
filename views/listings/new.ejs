<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="my-3">Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Title" type="text" class="form-control" id="title" required/>
      <div class="valid-feedback">
        Looks beeter.
      </div>
      </div>
     <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="Description" id="description" class="form-control" required
      ></textarea>
      <div class="invalid-feedback">
        Please write a a short description.
      </div>
     </div>
    
     <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
          name="listing[image]"
          placeholder="Image URL/Link"
          type="text"
          id="image"
          class="form-control" 
        />
        <div class="invalid-feedback">
          Please choose a valid url.
        </div>
      </div>
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="1500" type="number" id="price"class="form-control"required/>
        <div class="invalid-feedback">
          Please choose a valid Price.
        </div>
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="India" type="text" id="country" class="form-control" required/>
        <div class="invalid-feedback">
          Please choose a valid country.
        </div>
      </div>
    </div>
     <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input
        name="listing[location]"
        placeholder="Jaipur, Rajasthan"
        type="text"
        class="form-control" id="form-control" required
      />
      <div class="invalid-feedback">
        Please choose a valid location.
      </div>
     </div>
      
      <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
  </div>
</div>