<div class="form-check-reverse form-switch d-flex p-2" id="tax-info">
  <label class="form-check-label mx-3" for="flexSwitchCheckDefault">Display Taxes</label>
  <input class="form-check-input mx-2" type="checkbox" role="switch" id="flexSwitchCheckDefault">
</div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a href="listings/<%=listing.id %>" class="listing-link">
    <div class="card col listing-card">
      <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image"
        style="height: 20rem;">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %></b> <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>/night 
          &nbsp; <i class="taxes">+18% GST</i>
        </p>
      </div>
    </div>
    
  </a>
  <% } %>
</div>

<script>
  let toggleTax = document.getElementById('tax-info');

  toggleTax.addEventListener('click', ()=>{
    let taxes = document.getElementsByClassName('taxes');

    for(tax of taxes){
      if(tax.style.display != "inline"){
          tax.style.display = "inline"
    }else {
      tax.style.display = "none"
    }
    }
   
    
  })

</script>
   