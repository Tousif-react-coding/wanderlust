<%= layout("/layouts/boilerplate") %>

    <h3>All Listings</h3>
    
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%=listing._id %>" class="listing-link"></a>
    <div class="card col" style="height: 20rem;">
      <img src="<%= listing.image" class="card-img-top" alt="listing_image">
      <div class="card-img-overlay">abc</div>
      <div class="card-body">
        <p class="card-text">
         <b> <%= listing.title %></b>
          <%= listing.price.toLocalString("en-IN") %>
        </p>
      </div>
    </div>
    </a>
    <% } %>
</div>

