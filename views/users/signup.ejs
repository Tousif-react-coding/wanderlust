<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-6 offset-3">
      <h1 class="mt-3 text center">SignUp on Wanderlust</h1>
<form action="/signup" method="post" novalidate class="needs-validation">
    <div class="mb-3">
        <label for="username" class="form-label"><i class="fa-regular fa-user"></i> <span class="ms-2">Username</span></label>
        <input name="username" type="text" class="form-control" id="username" required/>
      <div class="valid-feedback">Looks Awesome.</div>   
      </div>
    <div class="mb-3">
        <label for="email" class="form-label"><i class="fa-regular fa-envelope"></i> <span class="ms-2">Email</span></label>
        <input name="email" type="email" class="form-control" id="email" required/>
      </div>
    <div class="mb-3">
        <label for="password" class="form-label"><i class="fa-solid fa-key"></i> <span class="ms-2">Password</span></label>
        <input name="password" type="password" class="form-control" id="password" required/>
      </div>
    <button class="btn btn-success">SignUp</button>

</form>
</div>
</div>