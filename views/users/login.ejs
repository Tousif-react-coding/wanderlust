<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1 class="mt-3 text center">Login</h1>
    <form action="/login" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label  mr-auto"><i
            class="fa-regular fa-user"></i> <span
            class="ms-2">Username</span></label>
        <input name="username" type="text" class="form-control" id="username"
          required />
        <div class="valid-feedback">Looks Goods.</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label  mr-auto"> <i
            class="fa-solid fa-key"></i> <span
            class="ms-2">Password</span></label>
        <input name="password" type="password" class="form-control"
          id="password" required />
      </div>
      <button class="btn btn-success">Login</button>

    </form>
  </div>
</div>